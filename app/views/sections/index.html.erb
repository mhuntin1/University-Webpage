<h1>Sections</h1>

<table>
  <thead>
    <tr>
      <th>Semester</th>
      <th>Number</th>
      <th>Room number</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= section.Semester %></td>
        <td><%= section.Number %></td>
        <td><%= section.Roon_Number %></td>
        <td><%= section.course_id %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%=  button_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



